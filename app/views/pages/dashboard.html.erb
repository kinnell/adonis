<div class="row state-overview">

	<div class="col-lg-3 col-sm-6">
      <section class="panel">
           <div class="symbol red">
               <i class="fa fa-dashboard"></i>
           </div>
           <div class="value">
               <h1>
                   <%= Weighin.all.count %>
               </h1>
               <p>Total Weigh-Ins</p>
           </div>
       </section>
   </div>

   <div class="col-lg-3 col-sm-6">
