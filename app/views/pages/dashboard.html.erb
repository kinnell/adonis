               <h1>
                   <%= User.all.count %>
               </h1>
               <p>Total Users</p>
           </div>
       </section>
   </div>
   <div class="col-lg-3 col-sm-6">
       <section class="panel">
           <div class="symbol yellow">
               <i class="fa fa-users"></i>
           </div>
