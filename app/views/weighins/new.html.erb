  <section id="main-content">
  <section class="wrapper">

    <section class="panel panel-primary">
      <header class="panel-heading">New Weigh-In</header>
      
      <div class="panel-body">
        <%= form_for(@weighin, :html => {:class => 'form-horizontal'}) do |f| %>
        
          <!-- Prints Errors -->
          <% if @weighin.errors.any? %>
            <% @weighin.errors.full_messages.each do |msg| %>
                <script>$(document).ready(function () {
                  noty({text:'<%= msg %>', type: 'error', layout: 'topCenter', timeout: 10000, dismissQueue: true, animateOpen: {opacity: 'show'}});});
                </script>
            <% end %>               
          <% end %>

          <div class="form-group">
            <label class="col-lg-2 col-sm-2 control-label">Your Weight (lbs):</label>
            <div class="col-lg-10">
              <%= f.number_field :weight, class: "form-control" %>                 
            </div>
          </div>

          <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
              <%= f.submit "Add Weigh-In", class: "btn btn-primary" %>
            </div>
          </div>
            
        <% end %>
      </div>

    </section>

  </section>
</section>




  


  










  