<div class="modal fade" id="addWeighin" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">

      <% @weighin = Weighin.new %>
      <%= form_for(@weighin, :html => { :style => 'margin: 0;' }) do |f| %>

          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h2 class="modal-title" id="myModalLabel"><b><center>New Weigh-In</center></b></h4>
          </div>
          
          <div class="modal-body">
            
              <!-- Error Printing -->
              <% if @weighin.errors.any? %>
                <div id="error_explanation">
                  <ul>
                    <% @weighin.errors.full_messages.each do |msg| %>
                     <script type="text/javascript">
                    $(document).ready(function () {
                      noty({text:'<%= msg %>', type: 'information', layout: 'topCenter', timeout: 5000, dismissQueue: true, animateOpen: {opacity: 'show'}});  
                    });
                    </script>
                    <% end %>
                  </ul>
                </div>
              <% end %>

              
              
              <div style="text-align: center;"> Weight (lbs): <%= f.number_field :weight, class: "form-control", autofocus: true %></div>
                                
          </div>

          <div class="modal-footer">
              <center><%= f.submit "Submit", class: "btn btn-primary" %></center>
          </div>

      <% end %>

    </div>
  </div>
</div>




  