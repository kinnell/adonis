<div class="container">
  
  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'form-signin'}) do |f| %>

    <h2 class="form-signin-heading" style="background-color: #00334b"><span class="fa fa-undo"></span> Reset Your Password</h2>
   
    <div class="login-wrap">

       <%= devise_error_messages! %>

       <%= f.email_field :email, class: "form-control", :placeholder => "Email address", :autofocus => true %>
      
       <div class="form-group"><%= f.submit "Reset Password", class: "btn btn-primary btn-block" %></div>

      <hr>
        
      <center><%= link_to "Log In", new_session_path(resource_name) %> | <%= link_to "Register", new_registration_path(resource_name) %></center>

    </div>

  <% end %>

</div>



