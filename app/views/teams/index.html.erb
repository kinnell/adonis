<% if user_signed_in? %>

  <div id="content" class="span11">
    <div class="container">

      <h1><i class="fa fa-users"></i> Teams</h1>

        <% unless current_user.team.blank? %>
            You are on Team <%= current_user.team.name %>
        <% else %>

            You are not on a team.<br>
            <%= link_to "New Team", new_team_path, class: "btn btn-primary btn-success", style: "float: right" %>

            <hr>      

            <table class="table table-hover table-bordered table-center">
              <thead>
                <tr style="background-color: #eeeeee">
                  <th>#</th>
                  <th>Team Name</th>
                  <th>Members</th>
                  <th>Action</th>
                </tr>
              </thead>

              <tbody>
                <% Team.all.each_with_index do |team, i| %>
                  <tr> 
                    <td><%= i+1 %></td>             
                    <td><%= team.name %></td>
                    <td>
                      <% team.membership.each do |member| %>
                        <%= member.name %> 
                      <% end %>
                    </td>
                    <td></td>
                  </tr>
                <% end %>

              </tbody>
            </table>

            <br>

        <% end %>

    </div>
  </div>

<% end %>
