<% if @team.blank? %>

<h1 class="title"><i class="fa fa-users"></i> My Team</h1>

<hr>

    <section class="panel panel-primary">
      <div class="panel-heading">
        You are not on a team yet!
      </div>

      <div class="panel-body">
        If you would like to join a team, please have one person from your team email <b>TheBiggestLoser@eClinicalWorks.com</b> with the team name and team members by January 6th. Only 4 to 6 people per team and members cannot be modified after Wednesday, January 8th, 2014.
      </div>
    </section>

<% else %>



<section class="panel panel-primary">
  <header class="panel-heading blue"><center><font size=18><i class="fa fa-users"></i> <%= @team.name %></font></center></header>
</section>

<div class="row state-overview">

  <div class="col-lg-4 col-sm-6">
       <section class="panel">
           <div class="symbol blue">
               <i class="fa fa-dashboard"></i>
           </div>
           <div class="value">
               <h1><%= @team.numWeighins %></h1>
               <p>Total Weigh-Ins</p>
           </div>
       </section>
   </div>

  <div class="col-lg-4 col-sm-6">
      <section class="panel">
           <div class="symbol yellow">
               <i class="fa fa-bar-chart-o"></i>
           </div>
           <div class="value">
              <h1><%= @team.weightPercentChange %>%</h1>
               <p>Weight Loss</p>
           </div>
       </section>
   </div>



   <div class="col-lg-4 col-sm-6">
       <section class="panel">
           <div class="symbol red">
               <i class="fa fa-trophy"></i>
           </div>
           <div class="value">
               <h1>#<%= @team.rank %></h1>
               <p>Team Rank</p>
           </div>
       </section>
   </div>
</div>




<div class="row">
  <div class="col-lg-12">
    <section class="panel panel-primary">
      <header class="panel-heading">Team Members (<%= @team.users.count %>)</header>

      <table class="table table-bordered table-advance table-hover">
        <thead>
          <tr style="background-color: #eeeeee">
            <th>#</th>
            <th>Member Name</th>
            <th>Email Address</th>
            <th>Overall Percent Weight Loss</th>
          </tr>
        </thead>

        <tbody>
          <% @team.users.each_with_index do |member, i| %>
            <tr>
              <td><%= i+1 %></td>
              <td><%= member.name %></td>
              <td><%= member.email %></td>
              <td><%= member.printCurrentWeightPercentChange %></td>
            </tr>
          <% end %>

        </tbody>
      </table>

    </section>
  </div>
</div>










<% end %>

