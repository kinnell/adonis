<section id="main-content">
	<section class="wrapper">
		<h1 class="title"><i class="fa fa-users"></i> Team: <%= @team.name %><button class="btn btn-primary" style="float: right;" data-toggle="modal" data-target="#addTeam"><span class="fa fa-plus"></span> Add Member</button></h1>
		<hr>


		<div class="row">
            <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">Team Members</header>
                <table class="table table-bordered table-advance table-hover">


           
              <thead>
                <tr style="background-color: #eeeeee">
                  <th>#</th>
                  <th>Member Name</th>
                  <th>Email Address</th>
                  <th>Overall Percent Weight Loss</th>
                </tr>
              </thead>

              <tbody>
                <% @team.users.each_with_index do |member, i| %>
                                    
                  <tr>

                    <td><%= i+1 %></td>             
                    <td><%= member.name %></td>
                    <td><%= member.email %></td>
                    <td><%= printWeightPercentChange(member.overallWeightPercentChange) %></td>

                      
                  </tr>
                <% end %>

              </tbody>
            </table>

          </section>
        </div>
      </div>




    </section>
  </section>






