<%= render "errors" %>

    <h1 class="title"><span class="fa fa-plus"></span> Edit Team</h1>

    <%= form_for(@team) do |f| %>

        <table>
          <tr>
            <td style="vertical-align: middle; padding: 10px 0 10px 0; font-size: 13px;">Team Name: </td>
            <td><%= f.text_field :name, class: "form-control", style: "padding: 5px 10px 5px 10px; float: left; margin: 0px; margin-left: 10px;", :autofocus => true %></td>
          </tr>
          

        </table>


      <div class="form-group" style="padding: 10px 0 0 0;">
        <%= f.submit "Save", class: "btn btn-primary" %>
      </div>

      <hr>
      


    <% end %>

