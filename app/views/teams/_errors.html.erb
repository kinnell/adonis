<% if @team.errors.any? %>
  <% @team.errors.full_messages.each do |msg| %>
    <script>
      $(document).ready(function () {
        noty({text:'<%= msg %>', 
              type: 'warning', 
              layout: 'topCenter', 
              timeout: 10000, 
              animateOpen: {opacity: 'show'}});  
      });
    </script>
  <% end %>
<% end %>